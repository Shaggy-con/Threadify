# Backend configuration
PORT=3000
FRONTEND_URL=http://localhost:5173
# JWT for signing auth tokens
JWT_SECRET=replace-with-a-strong-secret

# Either provide a single DB_URI or individual MySQL fields used by migrations
# Example PlanetScale/Neon-style URI with SSL params
DB_URI=mysql://user:password@host:3306/database
# If your provider requires CA cert, paste the PEM content as a single line or use file path and read it into env before start
DB_CA_CERT=

# If you use per-field config for migrations (mig1..mig5)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=yourpassword
DB_NAME=openblogs
